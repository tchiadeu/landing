<div class="flex flex-col items-center mt-20 gap-5">

  <h2 class="text-2xl font-semibold leading-7 text-gray-900">Ajout d'un talent</h2>

  <%= form_with(model: @talent, class: "w-96") do |form| %>
    <div>
      <%= form.label :first_name, "Prénom", class: "block text-base font-medium leading-6 text-gray-900" %>
      <%= form.text_field :first_name, class: "mt-2 block flex-1 border rounded-md py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6 w-full" %>
    </div>

    <div class="mt-3">
      <%= form.label :last_name, "Nom", class: "block text-base font-medium leading-6 text-gray-900" %>
      <%= form.text_field :last_name, class: "mt-2 block flex-1 border rounded-md py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6 w-full" %>
    </div>

    <div class="mt-3">
      <%= form.label :job, "Métier", class: "block text-base font-medium leading-6 text-gray-900" %>
      <%= form.text_field :job, class: "mt-2 block flex-1 border rounded-md py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6 w-full" %>
    </div>

    <div class="mt-3">
      <p class="block text-base font-medium leading-6 text-gray-900">Réseaux Sociaux</p>
      <div class="flex flex-col gap-3 mt-2">
        <div data-controller="display-url" class="flex w-full justify-between">
          <div class="flex gap-2 items-center block h-10">
            <%= form.check_box :social_network, {data: {action: "change->display-url#showInput"}, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600"}, "Linkedin" %>
            <%= form.label "Linkedin", class: "block text-base font-medium text-gray-900" %>
          </div>
          <%= form.text_field :social_network, placeholder: "url", data: {display_url_target: "input"}, class: "hidden w-56 border rounded-md py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0" %>
        </div>
        <div data-controller="display-url" class="flex w-full justify-between">
          <div class="flex gap-2 items-center block h-10">
            <%= form.check_box :social_network, {data: {action: "change->display-url#showInput"}, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600"}, "Facebook" %>
            <%= form.label "Facebook", class: "block text-base font-medium text-gray-900" %>
          </div>
          <%= form.text_field :social_network, placeholder: "url", data: {display_url_target: "input"}, class: "hidden w-56 border rounded-md py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0" %>
        </div>
        <div data-controller="display-url" class="flex w-full justify-between">
          <div class="flex gap-2 items-center block h-10">
            <%= form.check_box :social_network, {data: {action: "change->display-url#showInput"}, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600"}, "Instagram" %>
            <%= form.label "Instagram", class: "block text-base font-medium text-gray-900" %>
          </div>
          <%= form.text_field :social_network, placeholder: "url", data: {display_url_target: "input"}, class: "hidden w-56 border rounded-md py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0" %>
        </div>
        <div data-controller="display-url" class="flex w-full justify-between">
          <div class="flex gap-2 items-center block h-10">
            <%= form.check_box :social_network, {data: {action: "change->display-url#showInput"}, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600"}, "Tiktok" %>
            <%= form.label "TikTok", class: "block text-base font-medium text-gray-900" %>
          </div>
          <%= form.text_field :social_network, placeholder: "url", data: {display_url_target: "input"}, class: "hidden w-56 border rounded-md py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0" %>
        </div>
        <div data-controller="display-url" class="flex w-full justify-between">
          <div class="flex gap-2 items-center block h-10">
            <%= form.check_box :social_network, {data: {action: "change->display-url#showInput"}, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600"}, "Twitter" %>
            <%= form.label "Twitter", class: "block text-base font-medium text-gray-900" %>
          </div>
          <%= form.text_field :social_network, placeholder: "url", data: {display_url_target: "input"}, class: "hidden w-56 border rounded-md py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0" %>
        </div>
      </div>
    </div>

    <div class="mt-5 flex w-full gap-5">
      <%= link_to "Retour", :back, class: "border-2 border-solid border-indigo-600 hover:border-indigo-500 text-indigo-600 flex justify-center w-1/2 rounded-md px-3 py-2 text-base font-semibold hover:text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      <%= form.submit "Ajouter", class: "border-2 border-solid border-indigo-600 hover:border-indigo-500 cursor-pointer w-1/2 rounded-md bg-indigo-600 px-3 py-2 text-base font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>

</div>
