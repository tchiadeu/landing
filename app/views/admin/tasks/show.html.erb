<div class="flex justify-between">
  <h2 class="text-xl font-medium text-gray-700"><%= "#{@task.reference.name} : #{@task.title}" %></h2>
  <div class="flex border-2 border-indigo-600 rounded-xl overflow-hidden w-fit">
    <%= link_to edit_admin_task_path(@task), class: "px-2 py-1 group hover:bg-indigo-600 w-full flex justify-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 aspect-square text-indigo-600 group-hover:text-white">
        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
      </svg>
    <% end %>
    <div class="w-1.5 bg-indigo-600 h-full"></div>
    <%= link_to "/admin/tasks/#{@task.id}", data: { turbo_method: :delete, turbo_confirm: "Êtes vous sûr ?" }, class: "px-2 py-1 group hover:bg-indigo-600 w-full flex justify-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 aspect-square text-indigo-600 group-hover:text-white">
        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
      </svg>
    <% end %>
  </div>
</div>
<div class="border-t border-gray-100 mt-5">
  <dl class="divide-y divide-gray-100">
    <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
      <dt class="text-sm font-medium text-gray-900">Nom</dt>
      <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @task.title %></dd>
    </div>
    <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
      <dt class="text-sm font-medium text-gray-900">Description</dt>
      <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @task.description %></dd>
    </div>
    <% if @task.tags.any? %>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="w-full flex items-center justify-between">
          <p class="text-sm font-medium text-gray-900">Tags</p>
        </dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
          <ul class="grid grid-cols-3 gap-5">
            <% @task.tags do |tag| %>
              <div class="flex items-center gap-2">
                <div class="inline-flex items-center gap-x-2 rounded-md bg-gray-50 px-2 py-1 text-lg text-gray-600 ring-1 ring-inset ring-gray-500/10">
                  <div class="relative h-5 w-5 rounded-sm">
                    <%= svg_tag("icons/#{tag.icone}.svg", class: "w-5 h-5") %>
                  </div>
                  <%= tag.name %>
                </div>
                <%= link_to admin_tag_path(tag), data: { turbo_method: :delete, turbo_confirm: "Êtes vous sûr ?" }, class: "p-1 group hover:bg-indigo-600 flex justify-center rounded-full border-2 border-solid border-indigo-600 mr-5" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 aspect-square text-indigo-600 group-hover:text-white">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                  </svg>
                <% end %>
              </div>
            <% end %>
          </ul>
        </dd>
      </div>
    <% end %>
    <% @task.illustrations.each_with_index do |illustration, index| %>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="w-full flex items-center justify-between">
          <p class="text-sm font-medium text-gray-900"><%= "Contenu #{index + 1}" %></p>
          <%= link_to admin_illustration_path(illustration), data: { turbo_method: :delete, turbo_confirm: "Êtes vous sûr ?" }, class: "p-1 group hover:bg-indigo-600 flex justify-center rounded-full border-2 border-solid border-indigo-600 mr-5" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 aspect-square text-indigo-600 group-hover:text-white">
              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
          <% end %>
        </dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
          <%= render "illustration_#{illustration.category}" %>
        </dd>
      </div>
    <% end %>
  </dl>
</div>
