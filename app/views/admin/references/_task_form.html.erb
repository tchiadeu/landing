<div class="nested-form-wrapper" data-new-record="<%= form.object.new_record? %>">
  <p class="block text-sm font-semibold leading-6 text-gray-900">Nouvelle tâche effectuée</p>
  <div class="flex gap-5 items-center w-full">
    <%= form.text_field :title, class: "block w-1/3 rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    <%= form.text_field :description, class: "block w-1/3 rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    <button type="button" class="border-2 border-indigo-600 flex justify-center w-1/3 rounded-md  px-3.5 py-2.5 text-sm font-semibold text-indigo-600 hover:text-white shadow-sm hover:bg-indigo-600" data-action="nested-form#remove">Supprimer la tâche</button>
  </div>
  <%= form.hidden_field :_destroy %>
</div>
