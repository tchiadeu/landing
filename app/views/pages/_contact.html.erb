    <%= form_with(url: '/send_contact', method: 'post', class: "px-6 pb-24 pt-20 sm:pb-32 lg:px-8 lg:py-48", data: {controller: "submit"}) do |form| %>
      <div class="mx-auto max-w-xl lg:mr-0 lg:max-w-lg">
        <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
          <div>
            <%= form.label :first_name, 'Prénom', class: 'block text-sm font-semibold leading-6 text-white' %>
            <div class="mt-2.5">
              <%= form.text_field :first_name, data: {navbar_target: "input"}, autocomplete: 'given-name', class: 'block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6' %>
            </div>
          </div>
          <div>
            <%= form.label :last_name, 'Nom', class: 'block text-sm font-semibold leading-6 text-white' %>
            <div class="mt-2.5">
              <%= form.text_field :last_name, autocomplete: 'family-name', class: 'block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6' %>
            </div>
          </div>
          <div class="sm:col-span-2">
            <%= form.label :email, 'Email', class: "block text-sm font-semibold leading-6 text-white" %>
            <div class="mt-2.5">
              <%= form.email_field :email, autocomplete: 'email', class: 'block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6' %>
            </div>
          </div>
          <div class="sm:col-span-2">
            <%= form.label :phone, 'Téléphone', class: "block text-sm font-semibold leading-6 text-white" %>
            <div class="mt-2.5">
              <%= form.number_field :phone, autocomplete: 'tel', class: 'block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6' %>
            </div>
          </div>
          <div class="sm:col-span-2">
            <%= form.label :message, 'Message', class: 'block text-sm font-semibold leading-6 text-white' %>
            <div class="mt-2.5">
              <%= form.text_area :message, rows: 4, class: 'block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6' %>
            </div>
          </div>
        </div>
        <div class="mt-8 flex justify-end">
          <%= form.submit 'Envoyer', data: {action: "click->submit#submitForm"}, class: 'cursor-pointer rounded-md bg-white px-3.5 py-2.5 text-center text-sm font-semibold text-black shadow-sm hover:bg-gray-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-200' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
